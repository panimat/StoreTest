@model POSStore.Data.Model.Product

<div class="col-lg-3">
    <h3>Модель: @Model.name</h3>
    <img class="img-thumbnail" src="@Model.img" alt="@Model.name" />
    <p>Цена: @Model.price.ToString("c")</p>
    <p>Описание: @Model.description</p>
    <p><a class="btn btn-success" asp-controller="Cart" asp-action="addToCart" asp-route-id="@Model.id">Хочу купить</a></p>
</div>